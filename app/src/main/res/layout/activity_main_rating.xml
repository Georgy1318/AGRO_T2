<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".orderActivity">

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainRating"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainRating">

    <View
        android:id="@+id/dividerHorizontally"
        android:layout_width="400dp"
        android:layout_height="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="592dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageViewTheUser"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="305dp"
        android:layout_marginBottom="632dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.375"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewNameTheUser"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="667dp"
        android:text="Власов П. К."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageViewTheUser"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewQualityTheUser"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="627dp"
        android:text="Качество 7.68"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageViewTheUser"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameTheUser"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewRatingTheUser"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="611dp"
        android:text="Ретинг: 3 Место"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageViewTheUser"
        app:layout_constraintTop_toBottomOf="@+id/textViewQualityTheUser"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageViewUser1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dividerHorizontally"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewFNP"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="246dp"
        android:layout_marginBottom="539dp"
        android:text="Ф.И.О"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dividerHorizontally" />

    <TextView
        android:id="@+id/textViewNameUser1"
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="193dp"
        android:layout_marginBottom="10dp"
        android:text="Зина М. Н."
        app:layout_constraintBottom_toTopOf="@+id/textViewRatingUser1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewUser1"
        app:layout_constraintTop_toBottomOf="@+id/textViewFNP" />

    <TextView
        android:id="@+id/textViewRatingUser1"
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Качество : 8.75"
        app:layout_constraintStart_toEndOf="@+id/imageViewUser1"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameUser1" />

    <TextView
        android:id="@+id/textViewOrders"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="32dp"
        android:text="Заказы"
        app:layout_constraintStart_toEndOf="@+id/textViewFNP"
        app:layout_constraintTop_toBottomOf="@+id/dividerHorizontally" />

    <TextView
        android:id="@+id/textViewOrdersUser1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="472dp"
        android:text="34"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textViewNameUser1"
        app:layout_constraintTop_toBottomOf="@+id/textViewOrders"
        app:layout_constraintVertical_bias="0.607" />

    <TextView
        android:id="@+id/textViewPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="60dp"
        android:text="Место"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewOrders"
        app:layout_constraintTop_toBottomOf="@+id/dividerHorizontally" />

    <TextView
        android:id="@+id/textViewPlaceUser1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="16dp"
        android:text="1"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/textViewOrdersUser1"
        app:layout_constraintTop_toBottomOf="@+id/textViewPlace" />



</androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav_menu"
        app:headerLayout="@layout/header"/>


</androidx.drawerlayout.widget.DrawerLayout>
